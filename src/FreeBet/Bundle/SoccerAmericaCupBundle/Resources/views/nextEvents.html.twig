{% extends '::base.html.twig' %}

{% block body %}
    <h1>{{ competition.name }}</h1>
    <a href="{{ url("competition_detail", {slug:competition.slug}) }}">Back</a><br />

    {% set lastDate = false %}
    {% for event in events if event.canBet %}
        {% if lastDate != event.date|date('Y-m-d') %}
            <h2>{{ event.date|date_format('date') }}</h2>
            {% set lastDate = event.date|date('Y-m-d') %}
        {% endif %}
        {{ event.date|date_format('hour') }} - {{ event.leftName }} {% include 'FreeBetSoccerAmericaCupBundle:Match:_score.html.twig' with {match: event} %} {{ event.rightName }}<br />
    {% else %}
        {{ 'no_more_event'|trans }}
    {% endfor %}
{% endblock %}